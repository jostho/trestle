---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ monitoring.target_namespace }}
  labels:
    deployer: {{ project_name }}
---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: kube-prometheus-stack
  namespace: kube-system
spec:
  chart: kube-prometheus-stack
  targetNamespace: {{ monitoring.target_namespace }}
  version: 17.1.1
  repo: https://prometheus-community.github.io/helm-charts
  valuesContent: |-
    commonLabels:
      deployer: {{ project_name }}
    prometheus:
      ingress:
        enabled: true
        path: /
        pathType: Prefix
        hosts:
          - {{ monitoring.ingress.prometheus }}
    grafana:
      ingress:
        enabled: true
        path: /
        pathType: Prefix
        hosts:
          - {{ monitoring.ingress.grafana }}
