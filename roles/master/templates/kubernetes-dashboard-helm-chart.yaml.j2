---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ kubernetes_dashboard.target_namespace }}
  labels:
    deployer: {{ project_name }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: kubernetes-dashboard
  labels:
    k8s-app: kubernetes-dashboard
    deployer: {{ project_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: kubernetes-dashboard
  namespace: {{ kubernetes_dashboard.target_namespace }}
---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: kubernetes-dashboard
  namespace: kube-system
spec:
  chart: kubernetes-dashboard
  targetNamespace: {{ kubernetes_dashboard.target_namespace }}
  version: 5.10.0
  repo: https://kubernetes.github.io/dashboard/
  valuesContent: |-
    extraArgs:
      - --enable-skip-login
      - --enable-insecure-login
    protocolHttp: true
    service:
      type: LoadBalancer
      externalPort: 80
      loadBalancerIP: {{ metallb.lb_ip.kubernetes_dashboard }}
    ingress:
      enabled: true
      hosts:
        - kubernetes-dashboard.{{ dns_suffix }}
    metricsScraper:
      enabled: true
